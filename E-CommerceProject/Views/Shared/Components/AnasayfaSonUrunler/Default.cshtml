@using E_CommerceProject.Models
@model List<Urun>

<div class="col">
	<h5 class="font-weight-semi-bold pt-5">Son Eklenen Ürünler</h5>
	@foreach(var i in Model)
	{
	<div class="product row row-gutter-sm align-items-center mb-4">
		<div class="col-5 col-lg-5">
			<div class="product-thumb-info border-0">
					<a href="/Home/UrunDetay/@i.Id">
					<div class="product-thumb-info-image">
						<img alt="" class="img-fluid" src="~/resimler/@i.ResimUrl">
					</div>
				</a>
			</div>
		</div>
		<div class="col-7 col-lg-7 ms-md-0 ms-lg-0 ps-lg-1 pt-1">
			<a href="#" class="d-block text-uppercase text-decoration-none text-color-default text-color-hover-primary line-height-1 text-0 mb-2">@i.Kategori.Adi</a>
			<h3 class="text-3-5 font-weight-medium font-alternative text-transform-none line-height-3 mb-0"><a href="/Home/UrunDetay/@i.Id" class="text-color-dark text-color-hover-primary text-decoration-none">@i.Adi</a></h3>
			<div title="Rated 5 out of 5">
				<input type="text" class="d-none" value="5" title="" data-plugin-star-rating data-plugin-options="{'displayOnly': true, 'color': 'dark', 'size':'xs'}">
			</div>
			<p class="price text-4 mb-0">
				<span class="sale text-color-dark font-weight-semi-bold">@i.indirimliFiyat</span>
				<span class="amount">@i.Fiyat</span>
			</p>
		</div>
	</div>
		
	}
</div>

